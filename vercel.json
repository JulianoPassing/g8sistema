{
  "version": 2,
  "functions": {
    "api/clientes.js": {
      "runtime": "nodejs18.x"
    },
    "api/pedidos.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/clientes",
      "destination": "/api/clientes.js"
    },
    {
      "source": "/api/clientes/:id",
      "destination": "/api/clientes.js"
    },
    {
      "source": "/api/pedidos",
      "destination": "/api/pedidos.js"
    },
    {
      "source": "/api/pedidos/:id",
      "destination": "/api/pedidos.js"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
} 