{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/debug",
      "destination": "/api/debug.js"
    },
    {
      "source": "/api/test-clientes",
      "destination": "/api/test-clientes.js"
    },
    {
      "source": "/api/test-clientes/:id",
      "destination": "/api/test-clientes.js"
    },
    {
      "source": "/api/clientes",
      "destination": "/api/clientes.js"
    },
    {
      "source": "/api/clientes/:id",
      "destination": "/api/clientes.js"
    },
    {
      "source": "/api/pedidos",
      "destination": "/api/pedidos.js"
    },
    {
      "source": "/api/pedidos/:id",
      "destination": "/api/pedidos.js"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
} 